*{
    -webkit-box-sizing:	border-box;
    -moz-box-sizing:	border-box;
    box-sizing:	border-box;
}

body, html{
    margin: 0px;
    padding: 0px;
    font-family: caption, sans-serif;
}

#container{
    display: flex;
    min-height: 100vh;
    flex-direction: row;
}

#container aside{
    background: #03A9F4;
    width: 25vw;
    min-width: 320px;
    overflow-y: scroll;
    color: #FFFFFF;
    display: flex;
    flex-direction: column;
    padding: 16px;
}

#container aside nav{
    display: flex;
    flex-direction: column;
}

a, a:visited {
    text-decoration: none;
}

#containter aside nav a{
    display: block;
    padding: 16px;
    color: rgba(255,255,255,0.8);
}



#container main{
    flex: 2;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    max-height: 100vh;
}

#container main header{
    height: 64px;
    padding: 0px;
    background-color: #FFFFFF;
    border-bottom: 1px solid #E0E0E0;
}

#container main header h1{
    line-height: 64px;
    padding: 0px 16px;
    margin: 0px;
}

#container main div{
    overflow-y: scroll;
    background-color: #FAFAFA;
    width: auto;
    padding: 16px;
}

#container main div article{
    max-width: 800px;
    margin: 0px, auto;
}
